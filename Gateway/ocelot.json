{
  "Routes": [
    // Leave Request Service
    {
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/{any}",
      "SwaggerKey": "leaving",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/leaves/{any}",
      "ServiceName": "SS_Portal_LeaveRequest"
    },
    // Identity Service
    {
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/identities/login",
      "ServiceName": "SS_Portal_Identity",
      "UpstreamPathTemplate": "/login",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "auth",
      "Auth": false
    },

    {
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/{everything}",
      "ServiceName": "SS_Portal_Identity",
      "UpstreamPathTemplate": "/identities/{everything}",
      "UpstreamHttpMethod": [ "GET" ],
      "SwaggerKey": "auth"
    },

    // Room Booking Service
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "ServiceName": "SS_Portal_Booking",
      "UpstreamPathTemplate": "/bookings/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "room"
    },
    // Mail Service
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 2004
        }
      ],
      "UpstreamPathTemplate": "/mails/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "room"
    }
  ],
  "ServiceDiscoveryProvider": {
    "Scheme": "http",
    "Host": "localhost",
    "Port": 8500,
    "Type": "Consul"
  },
  "SwaggerEndPoints": [
    {
      "Key": "auth",
      "Config": [
        {
          "Name": "Auth API",
          "Version": "v1",
          "Url": "http://localhost:2001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "room",
      "Config": [
        {
          "Name": "Room API",
          "Version": "v1",
          "Url": "http://localhost:2003/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "booking",
      "Config": [
        {
          "Name": "Booking API",
          "Version": "v1",
          "Url": "http://localhost:2003/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "leaving",
      "Config": [
        {
          "Name": "Leave Request API",
          "Version": "v1",
          "Url": "http://localhost:2002/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}